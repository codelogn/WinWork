<Window x:Class="WinWork.UI.Views.LinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WinWork.UI.ViewModels"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="650" Width="800"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Background="#2B2D30"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Border Background="#19FFFFFF" 
            CornerRadius="8" 
            BorderBrush="#33FFFFFF" 
            BorderThickness="1"
            Margin="8">
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              ShadowDepth="0" 
                              Color="Black" 
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>  <!-- Title Bar -->
                <RowDefinition Height="*"/>   <!-- Content -->
                <RowDefinition Height="60"/>  <!-- Buttons -->
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#33FFFFFF" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="{Binding DialogTitle}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                    
                    <Button Grid.Column="1"
                            Content="âœ•"
                            Style="{StaticResource ModernButtonStyle}"
                            Width="30" Height="30"
                            Margin="8"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="20">
                
                <StackPanel>
                    
                    <!-- Link Name -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Name *" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,8"
                                 Background="#33FFFFFF"
                                 Foreground="White"
                                 BorderBrush="#66FFFFFF"
                                 BorderThickness="1"
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <!-- Link Type -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Type" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding LinkTypes}"
                                  SelectedItem="{Binding SelectedLinkTypeItem}"
                                  DisplayMemberPath="DisplayName"
                                  Background="#33FFFFFF"
                                  Foreground="White"
                                  BorderBrush="#66FFFFFF"
                                  BorderThickness="1"
                                  Padding="12,8"
                                  FontSize="14">
                            <ComboBox.Resources>
                                <!-- Override the default Popup style -->
                                <Style TargetType="Popup">
                                    <Setter Property="AllowsTransparency" Value="True"/>
                                </Style>
                                <!-- ComboBoxItem style for dropdown -->
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        BorderThickness="0">
                                                    <ContentPresenter TextBlock.Foreground="White"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsHighlighted" Value="True">
                                                        <Setter Property="Background" Value="#4DFFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#66FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                  Grid.Column="2"
                                                                  Focusable="false"
                                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press"
                                                                  Background="{TemplateBinding Background}"
                                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                      IsHitTestVisible="False"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                      Margin="12,8,23,8"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      TextBlock.Foreground="White"/>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Grid x:Name="DropDown"
                                                              SnapsToDevicePixels="True"
                                                              MinWidth="{TemplateBinding ActualWidth}"
                                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                            <Border x:Name="DropDownBorder"
                                                                    Background="#E6000000"
                                                                    BorderThickness="1"
                                                                    BorderBrush="#66FFFFFF"
                                                                    CornerRadius="4"/>
                                                            <ScrollViewer Margin="0"
                                                                          SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True"
                                                                            KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Notes (Only for Notes type) - Moved to top for Notes items -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsNotesType}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Notes *" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,8"
                                 Background="#33FFFFFF"
                                 Foreground="White"
                                 BorderBrush="#66FFFFFF"
                                 BorderThickness="1"
                                 FontSize="14"
                                 Height="120"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                    
                    <!-- Parent Item Selection -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Parent Item" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableParents}"
                                  SelectedItem="{Binding SelectedParent}"
                                  Background="#33FFFFFF"
                                  Foreground="White"
                                  BorderBrush="#66FFFFFF"
                                  BorderThickness="1"
                                  Padding="12,8"
                                  FontSize="14">
                            <ComboBox.Resources>
                                <!-- Override the default Popup style -->
                                <Style TargetType="Popup">
                                    <Setter Property="AllowsTransparency" Value="True"/>
                                </Style>
                                <!-- ComboBoxItem style for dropdown -->
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        BorderThickness="0">
                                                    <ContentPresenter TextBlock.Foreground="White"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsHighlighted" Value="True">
                                                        <Setter Property="Background" Value="#4DFFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#66FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                                  Grid.Column="2"
                                                                  Focusable="false"
                                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press"
                                                                  Background="{TemplateBinding Background}"
                                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                      IsHitTestVisible="False"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                      Margin="12,8,23,8"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      TextBlock.Foreground="White"/>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Grid x:Name="DropDown"
                                                              SnapsToDevicePixels="True"
                                                              MinWidth="{TemplateBinding ActualWidth}"
                                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                            <Border x:Name="DropDownBorder"
                                                                    Background="#E6000000"
                                                                    BorderThickness="1"
                                                                    BorderBrush="#66FFFFFF"
                                                                    CornerRadius="4"/>
                                                            <ScrollViewer Margin="0"
                                                                          SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True"
                                                                            KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="Leave empty to create at root level" 
                                   Foreground="#AAFFFFFF" 
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- URL/Path (Hidden for Folders and Notes) -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RequiresUrl}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="URL/Path *"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedLinkType}" Value="WebUrl">
                                            <Setter Property="Text" Value="Website URL *"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedLinkType}" Value="FilePath">
                                            <Setter Property="Text" Value="File Path *"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedLinkType}" Value="FolderPath">
                                            <Setter Property="Text" Value="Folder Path *"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedLinkType}" Value="Application">
                                            <Setter Property="Text" Value="Application Path *"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="{Binding UrlPlaceholder}"
                                     Padding="12,8"
                                     Background="#33FFFFFF"
                                     Foreground="White"
                                     BorderBrush="#66FFFFFF"
                                     BorderThickness="1"
                                     FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Resources>
                                            <VisualBrush x:Key="CueBannerBrush" 
                                                         AlignmentX="Left" 
                                                         AlignmentY="Center" 
                                                         Stretch="None">
                                                <VisualBrush.Visual>
                                                    <Label Content="{Binding RelativeSource={RelativeSource AncestorType=TextBox}, Path=Tag}" 
                                                           Foreground="#AAFFFFFF" 
                                                           FontSize="14"
                                                           Padding="12,8"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Style.Resources>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal">
                                <Button Content="ðŸ“" 
                                        Command="{Binding BrowseFolderCommand}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="40" Height="40"
                                        Margin="1,0,0,0"
                                        ToolTip="Browse Folder"
                                        Visibility="{Binding SelectedLinkType, Converter={StaticResource LinkTypeToVisibilityConverter}, ConverterParameter=FolderPath}"/>
                                
                                <Button Content="ðŸ“„" 
                                        Command="{Binding BrowseFileCommand}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="40" Height="40"
                                        Margin="1,0,0,0"
                                        ToolTip="Browse File"
                                        Visibility="{Binding SelectedLinkType, Converter={StaticResource LinkTypeToVisibilityConverter}, ConverterParameter=FilePath}"/>
                                
                                <Button Content="ðŸ”§" 
                                        Command="{Binding BrowseApplicationCommand}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="40" Height="40"
                                        Margin="1,0,0,0"
                                        ToolTip="Browse Application"
                                        Visibility="{Binding SelectedLinkType, Converter={StaticResource LinkTypeToVisibilityConverter}, ConverterParameter=Application}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Folder Information -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLinkType}" Value="Folder">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="ðŸ’¡ Folders are organizational containers and don't require URLs" 
                                   Foreground="#AAFFAA" 
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                    
                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,8"
                                 Background="#33FFFFFF"
                                 Foreground="White"
                                 BorderBrush="#66FFFFFF"
                                 BorderThickness="1"
                                 FontSize="14"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    
                    <!-- Tags -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Tags" 
                                   Foreground="White" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12,8"
                                 Background="#33FFFFFF"
                                 Foreground="White"
                                 BorderBrush="#66FFFFFF"
                                 BorderThickness="1"
                                 FontSize="14"
                                 ToolTip="Enter tags separated by commas (e.g., work, important, project)"/>
                        <TextBlock Text="Enter tags separated by commas (e.g., work, important, project)" 
                                   Foreground="#99FFFFFF" 
                                   FontSize="11"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                    Background="#1A000000"
                    CornerRadius="0,0,12,12"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="0,1,0,0">
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="0,0,12,0"
                            Padding="20,8"
                            Background="#33666666"/>
                    
                    <!-- Delete Button (between Cancel and Save, only in edit mode) -->
                    <Button Content="ðŸ—‘ï¸ Delete"
                            Command="{Binding DeleteCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="0,0,12,0"
                            Padding="20,8"
                            Background="#33D32F2F"
                            Visibility="{Binding DeleteButtonVisibility}"/>
                    
                    <Button Content="{Binding IsEditMode, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Update|Save'}"
                            Command="{Binding SaveCommand}"
                            Padding="20,8">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                <Setter Property="Background" Value="#334CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=CanSave, Mode=OneWay}" Value="True">
                                        <Setter Property="Background" Value="#FF4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
