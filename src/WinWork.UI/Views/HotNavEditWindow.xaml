<Window x:Class="WinWork.UI.Views.HotNavEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Hot Nav" Height="460" Width="560"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="6" CaptionHeight="0" GlassFrameThickness="0" CornerRadius="0" UseAeroCaptionButtons="False" NonClientFrameEdges="None"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Small editor textbox style to match main window feel -->
        <Style x:Key="EditorTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- GroupBox header coloring -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder"
            Background="#E6000000"
            CornerRadius="12"
            BorderBrush="#33FFFFFF"
            BorderThickness="1"
            Padding="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#33FFFFFF" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="✏️ Edit Hot Nav" Foreground="White" FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Margin="12,0,0,0"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Name="CloseButton" Content="✕" Style="{StaticResource WindowControlButtonStyle}" Click="Cancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,8,0,8">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Width="80" Foreground="White"/>
                    <TextBox x:Name="NameTextBox" Width="380" Style="{StaticResource EditorTextBoxStyle}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
                    <CheckBox x:Name="IncludeFilesCheckBox" Content="Include files in menus" Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
                    <TextBlock Text="Max Depth (empty = 16):" VerticalAlignment="Center" Width="160" Foreground="White"/>
                    <TextBox x:Name="MaxDepthTextBox" Width="80" Style="{StaticResource EditorTextBoxStyle}" />
                </StackPanel>

                <GroupBox Header="Roots" Grid.Row="3">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="RootsDataGrid" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False" RowHeaderWidth="0" Background="Transparent" Foreground="White" GridLinesVisibility="None">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Path" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel LastChildFill="True">
                                                <TextBox Text="{Binding Path, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" VerticalAlignment="Center" Margin="0,0,4,0" Style="{StaticResource EditorTextBoxStyle}"/>
                                                <Button Content="Browse..." Click="BrowseRoot_Click" Width="80" DockPanel.Dock="Right" Style="{StaticResource ModernButtonStyle}"/>
                                            </DockPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Order" Binding="{Binding SortOrder}" Width="80" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="Add Root" Width="90" Click="AddRoot_Click" Margin="4" Style="{StaticResource ModernButtonStyle}"/>
                            <Button Content="Edit (Inline)" Width="110" Click="EditRoot_Click" Margin="4" Style="{StaticResource ModernButtonStyle}"/>
                            <Button Content="Remove Root" Width="90" Click="RemoveRoot_Click" Margin="4" Style="{StaticResource DangerButtonStyle}"/>
                            <Button Content="Move Up" Width="80" Click="MoveUp_Click" Margin="4" Style="{StaticResource ModernButtonStyle}"/>
                            <Button Content="Move Down" Width="80" Click="MoveDown_Click" Margin="4" Style="{StaticResource ModernButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="Save" Width="90" Click="Save_Click" Margin="4" Style="{StaticResource PrimaryButtonStyle}"/>
                    <Button Content="Cancel" Width="90" Click="Cancel_Click" Margin="4" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
