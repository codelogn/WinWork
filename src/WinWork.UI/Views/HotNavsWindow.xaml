<Window x:Class="WinWork.UI.Views.HotNavsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hot Navs" Height="400" Width="600">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,8">
            <Button Content="Add" Width="80" Click="Add_Click" Margin="4"/>
            <Button Content="Edit" Width="80" Click="Edit_Click" Margin="4"/>
            <Button Content="Delete" Width="80" Click="Delete_Click" Margin="4"/>
        </StackPanel>

        <ListView x:Name="HotNavsListView" Grid.Row="1" DisplayMemberPath="Name"/>
    </Grid>
</Window>
