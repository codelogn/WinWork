<Window x:Class="WinWork.UI.Views.TagManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WinWork.UI.ViewModels"
        mc:Ignorable="d"
        Title="Manage Tags"
        Height="650" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Border Background="#E6000000" 
            CornerRadius="12" 
            BorderBrush="#33FFFFFF" 
            BorderThickness="1">
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              ShadowDepth="0" 
                              Color="Black" 
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>  <!-- Title Bar -->
                <RowDefinition Height="*"/>   <!-- Content -->
                <RowDefinition Height="60"/>  <!-- Buttons -->
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#33FFFFFF" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Manage Tags"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                    
                    <Button Grid.Column="1"
                            Content="âœ•"
                            Style="{StaticResource ModernButtonStyle}"
                            Width="30" Height="30"
                            Margin="8"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Add/Edit Tag -->
                <Border Grid.Column="0" 
                        Background="#19FFFFFF"
                        CornerRadius="8"
                        Padding="16">
                    
                    <StackPanel>
                        <TextBlock Text="Add New Tag" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Margin="0,0,0,16"
                                   x:Name="TitleTextBlock"/>
                        
                        <!-- Tag Name -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Name *" 
                                       Foreground="White" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding NewTagName, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12,8"
                                     Background="#33FFFFFF"
                                     Foreground="White"
                                     BorderBrush="#66FFFFFF"
                                     BorderThickness="1"
                                     FontSize="14"/>
                        </StackPanel>
                        
                        <!-- Color Selection -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Color" 
                                       Foreground="White" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,8"/>
                            
                            <!-- Color Options -->
                            <ComboBox ItemsSource="{Binding ColorOptions}"
                                      SelectedValue="{Binding SelectedColorHex}"
                                      SelectedValuePath="HexValue"
                                      DisplayMemberPath="Name"
                                      Background="#33FFFFFF"
                                      Foreground="White"
                                      BorderBrush="#66FFFFFF"
                                      BorderThickness="1"
                                      Padding="12,8"
                                      FontSize="14">
                                <ComboBox.Resources>
                                    <!-- Custom ComboBox Template for proper dropdown visibility -->
                                    <Style TargetType="{x:Type ComboBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ComboBox}">
                                                    <Grid>
                                                        <ToggleButton Name="ToggleButton" 
                                                                      Grid.Column="2" 
                                                                      Focusable="false"
                                                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                      ClickMode="Press"
                                                                      Background="{TemplateBinding Background}"
                                                                      BorderBrush="{TemplateBinding BorderBrush}"
                                                                      BorderThickness="{TemplateBinding BorderThickness}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter Grid.Column="0"
                                                                                  Name="ContentSite"
                                                                                  IsHitTestVisible="False"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="{TemplateBinding Padding}"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"
                                                                                  TextBlock.Foreground="White"/>
                                                                <Path Grid.Column="1"
                                                                      Name="Arrow"
                                                                      Fill="White"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                            </Grid>
                                                        </ToggleButton>
                                                        <Popup Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True"
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Grid Name="DropDown"
                                                                  SnapsToDevicePixels="True"
                                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border Name="DropDownBorder"
                                                                        Background="#E6000000"
                                                                        BorderThickness="1"
                                                                        BorderBrush="#66FFFFFF"
                                                                        CornerRadius="4">
                                                                    <ScrollViewer Margin="4"
                                                                                  SnapsToDevicePixels="True"
                                                                                  VerticalScrollBarVisibility="Auto">
                                                                        <StackPanel IsItemsHost="True"
                                                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    
                                    <!-- Custom ComboBoxItem Template for proper text visibility -->
                                    <Style TargetType="{x:Type ComboBoxItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                                    <Border Name="Border"
                                                            Padding="8,4"
                                                            Background="Transparent"
                                                            BorderThickness="0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="20"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Border Grid.Column="0"
                                                                    Width="16" Height="16"
                                                                    CornerRadius="8"
                                                                    Background="{Binding Brush}"
                                                                    Margin="0,0,8,0"/>
                                                            <ContentPresenter Grid.Column="1"
                                                                              VerticalAlignment="Center"
                                                                              TextBlock.Foreground="White"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#334CAF50"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#664CAF50"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            
                <Button Content="Cancel"
                    Command="{Binding CancelEditCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Margin="0,0,8,0"
                    Padding="16,6"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                <Button Padding="16,6"
                    x:Name="ActionButton">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SuccessButtonStyle}">
                                        <Setter Property="Content" Value="Add"/>
                                        <Setter Property="Command" Value="{Binding AddTagCommand}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Content" Value="Save"/>
                                                <Setter Property="Command" Value="{Binding SaveEditCommand}"/>
                                                <!-- Keep Success appearance when saving in tag management -->
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Right Panel - Tags List -->
                <Border Grid.Column="2" 
                        Background="#19FFFFFF"
                        CornerRadius="8"
                        Padding="16">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Existing Tags" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Margin="0,0,0,16"/>
                        
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto">
                            
                            <ItemsControl ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#33FFFFFF" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,8">
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Color Indicator -->
                                                <Border Grid.Column="0"
                                                        Background="{Binding Color}" 
                                                        Width="20" Height="20" 
                                                        CornerRadius="10" 
                                                        Margin="0,0,12,0"/>
                                                
                                                <!-- Tag Name -->
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Name}" 
                                                           Foreground="White"
                                                           FontSize="14"
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal">
                                                    
                                                    <Button Content="âœï¸"
                                                            Command="{Binding DataContext.EditTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource ModernButtonStyle}"
                                                            Width="24" Height="24"
                                                            Margin="4,0"
                                                            ToolTip="Edit Tag"/>
                                                    
                                                    <Button Content="ðŸ—‘ï¸"
                                                            Command="{Binding DataContext.DeleteTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource ModernButtonStyle}"
                                                            Width="24" Height="24"
                                                            Margin="4,0"
                                                            ToolTip="Delete Tag"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Bottom Bar -->
            <Border Grid.Row="2" 
                    Background="#1A000000"
                    CornerRadius="0,0,12,12"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="0,1,0,0">
                
                <Button Content="Close"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="20,0"
                        Padding="24,8"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
