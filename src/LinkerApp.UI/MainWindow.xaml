<Window x:Class="LinkerApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkerApp.UI"
        xmlns:vm="clr-namespace:LinkerApp.UI.ViewModels"
        xmlns:controls="clr-namespace:LinkerApp.UI.Controls"
        xmlns:models="clr-namespace:LinkerApp.Models;assembly=LinkerApp.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" Width="1000"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <!-- DataContext will be set in code-behind -->
    
    <Border Background="#E6000000" 
            CornerRadius="12" 
            BorderBrush="#33FFFFFF" 
            BorderThickness="1">
        
        <!-- Window Chrome Effect -->
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                              ShadowDepth="0" 
                              Color="Black" 
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>  <!-- Content -->
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="#33FFFFFF" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding Title}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        
                        <Button Name="MinimizeButton"
                                Content="🗕"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Click="MinimizeButton_Click"/>
                        
                        <Button Name="MaximizeButton"
                                Content="🗖"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Click="MaximizeButton_Click"/>
                        
                        <Button Name="CloseButton"
                                Content="✕"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Tree View -->
                <Border Grid.Column="0" 
                        Background="#19FFFFFF"
                        CornerRadius="8"
                        Margin="8,8,4,8">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Search Box -->
                        <Border Grid.Row="0" 
                                Background="#33FFFFFF"
                                CornerRadius="6"
                                Margin="8">
                            <TextBox Name="SearchBox"
                                     Padding="12,8"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"
                                     FontSize="14"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Resources>
                                            <VisualBrush x:Key="CueBannerBrush" 
                                                         AlignmentX="Left" 
                                                         AlignmentY="Center" 
                                                         Stretch="None">
                                                <VisualBrush.Visual>
                                                    <Label Content="🔍 Search links..." 
                                                           Foreground="#AAFFFFFF" 
                                                           FontSize="14"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Style.Resources>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                            </Trigger>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                        
                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Margin="8,0,8,8"
                                    HorizontalAlignment="Right">
                            
                            <Button Content="🏷️" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Margin="4,0"
                                    ToolTip="Manage Tags"
                                    Click="ManageTags_Click"/>
                            
                            <Button Content="+" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Margin="4,0"
                                    ToolTip="Add Link"
                                    Click="AddLink_Click"/>
                            
                            <Button Content="📁" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Margin="4,0"
                                    ToolTip="Add Folder"
                                    Click="AddFolder_Click"/>
                            
                            <Button Content="🔄" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Margin="4,0"
                                    ToolTip="Refresh"
                                    Click="Refresh_Click"/>
                        </StackPanel>
                        
                        <!-- Links Tree -->
                        <Grid Grid.Row="2" Margin="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                
                                <!-- Enhanced TreeView with proper hierarchy -->
                                <TreeView x:Name="LinksTreeView"
                                          ItemsSource="{Binding RootLinks}"
                                          Background="Transparent"
                                          Foreground="White"
                                          BorderThickness="0"
                                          SelectedItemChanged="LinksTreeView_SelectedItemChanged"
                                          MouseDoubleClick="LinksTreeView_MouseDoubleClick">
                                    
                                    <TreeView.Resources>
                                        <!-- Define the hierarchical data template for LinkTreeItemViewModel -->
                                        <HierarchicalDataTemplate DataType="{x:Type vm:LinkTreeItemViewModel}" 
                                                                  ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" 
                                                           Margin="0,0,5,0"
                                                           Foreground="Orange"/>
                                                <TextBlock Text="{Binding Name}" 
                                                           Foreground="White" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                    </TreeView.Resources>
                                    <TreeView.ItemContainerStyle>
                                        <Style TargetType="TreeViewItem">
                                            <Setter Property="IsExpanded" Value="True"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Margin" Value="0,2,0,2"/>
                                            <EventSetter Event="MouseRightButtonUp" Handler="TreeViewItem_RightClick"/>
                                            <EventSetter Event="Loaded" Handler="TreeViewItem_Loaded"/>
                                            <Setter Property="ContextMenu">
                                                <Setter.Value>
                                                    <ContextMenu Background="#CC000000" BorderBrush="#33FFFFFF" Opened="ItemContextMenu_Opened">
                                                        <MenuItem Name="EditMenuItem" Header="✏️ Edit" Click="EditItem_Click"/>
                                                        <MenuItem Name="CopyUrlMenuItem" Header="📋 Copy URL" Click="CopyItemUrl_Click" Visibility="Collapsed"/>
                                                        <Separator Name="EditSeparator"/>
                                                        <MenuItem Name="AddFolderMenuItem" Header="📁 Add Folder Here" Click="AddItemFolder_Click" Visibility="Collapsed"/>
                                                        <MenuItem Name="AddLinkMenuItem" Header="🔗 Add Link Here" Click="AddItemLink_Click" Visibility="Collapsed"/>
                                                        <Separator Name="DeleteSeparator"/>
                                                        <MenuItem Name="DeleteMenuItem" Header="🗑️ Delete" Click="DeleteItem_Click"/>
                                                    </ContextMenu>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TreeView.ItemContainerStyle>
                                    
                                    <!-- TreeView Context Menu -->
                                    <TreeView.ContextMenu>
                                        <ContextMenu Background="#CC000000" BorderBrush="#33FFFFFF" Opened="ContextMenu_Opened">
                                            <MenuItem Name="EditMenuItem" Header="✏️ Edit" Click="Edit_Click" Visibility="Collapsed"/>
                                            <MenuItem Name="CopyUrlMenuItem" Header="� Copy URL" Click="CopyUrl_Click" Visibility="Collapsed"/>
                                            <Separator Name="EditSeparator" Visibility="Collapsed"/>
                                            <MenuItem Header="�📁 Add Folder Here" Click="AddSubFolder_Click"/>
                                            <MenuItem Header="🔗 Add Link Here" Click="AddSubLink_Click"/>
                                            <Separator Name="DeleteSeparator" Visibility="Collapsed"/>
                                            <MenuItem Name="DeleteMenuItem" Header="🗑️ Delete" Click="Delete_Click" Visibility="Collapsed"/>
                                        </ContextMenu>
                                    </TreeView.ContextMenu>
                                </TreeView>
                            </ScrollViewer>
                            
                            <!-- Loading/Status Overlay -->
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Loading..." 
                                           Foreground="White" 
                                           FontSize="16" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                <ProgressBar IsIndeterminate="True" 
                                             Width="100" 
                                             Height="4"/>
                            </StackPanel>
                            
                            <!-- Empty State Message -->
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsLoading}" Value="False"/>
                                                    <Condition Binding="{Binding RootLinks.Count}" Value="0"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <TextBlock Text="📁" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center"
                                           Foreground="#66FFFFFF"/>
                                <TextBlock Text="No items found" 
                                           Foreground="#99FFFFFF" 
                                           FontSize="16" 
                                           HorizontalAlignment="Center"
                                           Margin="0,10,0,5"/>
                                <TextBlock Text="Click '+' to add a link or '📁' to add a folder" 
                                           Foreground="#66FFFFFF" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Splitter -->
                <GridSplitter Grid.Column="1" 
                              Background="#33FFFFFF"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Width="3"/>
                
                <!-- Right Panel - Edit Form -->
                <Border Grid.Column="2" 
                        Background="#19FFFFFF"
                        CornerRadius="8"
                        Margin="4,8,8,8">
                    
                    <Grid>
                        <!-- Edit Form when item selected -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      Padding="16"
                                      Visibility="{Binding IsEditingItem, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                
                                <!-- Header -->
                                <TextBlock Text="Edit Item" 
                                           Foreground="White" 
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,20"/>
                                
                                <!-- Name Field -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Name *" 
                                               Foreground="White" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12,8"
                                             Background="#33FFFFFF"
                                             Foreground="White"
                                             BorderBrush="#66FFFFFF"
                                             BorderThickness="1"
                                             FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Type Field -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Type" 
                                               Foreground="White" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding LinkTypes}"
                                              SelectedValue="{Binding EditType}"
                                              SelectedValuePath="Type"
                                              DisplayMemberPath="DisplayName"
                                              Background="#33FFFFFF"
                                              Foreground="White"
                                              BorderBrush="#66FFFFFF"
                                              BorderThickness="1"
                                              Padding="12,8"
                                              FontSize="14">
                                        <ComboBox.Resources>
                                            <!-- Override the default Popup style -->
                                            <Style TargetType="Popup">
                                                <Setter Property="AllowsTransparency" Value="True"/>
                                            </Style>
                                            <!-- ComboBoxItem style for dropdown -->
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBoxItem">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    BorderThickness="0">
                                                                <ContentPresenter TextBlock.Foreground="White"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter Property="Background" Value="#4DFFFFFF"/>
                                                                </Trigger>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#66FFFFFF"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Resources>
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                              Grid.Column="2"
                                                                              Focusable="false"
                                                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                              ClickMode="Press"
                                                                              Background="{TemplateBinding Background}"
                                                                              BorderBrush="{TemplateBinding BorderBrush}"
                                                                              BorderThickness="{TemplateBinding BorderThickness}"/>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  IsHitTestVisible="False"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="12,8,23,8"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"
                                                                                  TextBlock.Foreground="White"/>
                                                                <Popup x:Name="Popup"
                                                                       Placement="Bottom"
                                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True"
                                                                       Focusable="False"
                                                                       PopupAnimation="Slide">
                                                                    <Grid x:Name="DropDown"
                                                                          SnapsToDevicePixels="True"
                                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                        <Border x:Name="DropDownBorder"
                                                                                Background="#E6000000"
                                                                                BorderThickness="1"
                                                                                BorderBrush="#66FFFFFF"
                                                                                CornerRadius="4"/>
                                                                        <ScrollViewer Margin="0"
                                                                                      SnapsToDevicePixels="True">
                                                                            <StackPanel IsItemsHost="True"
                                                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Grid>
                                                                </Popup>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>
                                
                                <!-- URL/Path Field (Hidden for Folders) -->
                                <StackPanel Margin="0,0,0,16">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding EditType}" Value="Folder">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="URL/Path *" 
                                               Foreground="White" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding EditUrl, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12,8"
                                             Background="#33FFFFFF"
                                             Foreground="White"
                                             BorderBrush="#66FFFFFF"
                                             BorderThickness="1"
                                             FontSize="14"/>
                                </StackPanel>
                                
                                <!-- Parent Folder Field -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Parent Folder" 
                                               Foreground="White" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding AvailableParents}"
                                              SelectedItem="{Binding EditParent}"
                                              DisplayMemberPath="Name"
                                              Background="#33FFFFFF"
                                              Foreground="White"
                                              BorderBrush="#66FFFFFF"
                                              BorderThickness="1"
                                              Padding="12,8"
                                              FontSize="14">
                                        <ComboBox.Resources>
                                            <!-- Override the default Popup style -->
                                            <Style TargetType="Popup">
                                                <Setter Property="AllowsTransparency" Value="True"/>
                                            </Style>
                                            <!-- ComboBoxItem style for dropdown -->
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Background" Value="#33FFFFFF"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBoxItem">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    BorderThickness="0">
                                                                <ContentPresenter TextBlock.Foreground="White"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter Property="Background" Value="#4DFFFFFF"/>
                                                                </Trigger>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#66FFFFFF"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Resources>
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                              Grid.Column="2"
                                                                              Focusable="false"
                                                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                              ClickMode="Press"
                                                                              Background="{TemplateBinding Background}"
                                                                              BorderBrush="{TemplateBinding BorderBrush}"
                                                                              BorderThickness="{TemplateBinding BorderThickness}"/>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  IsHitTestVisible="False"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="{TemplateBinding Padding}"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"
                                                                                  TextBlock.Foreground="White"/>
                                                                <TextBox x:Name="PART_EditableTextBox"
                                                                         Style="{x:Null}"
                                                                         Background="Transparent"
                                                                         Foreground="White"
                                                                         HorizontalAlignment="Left"
                                                                         VerticalAlignment="Center"
                                                                         Margin="{TemplateBinding Padding}"
                                                                         Focusable="True"
                                                                         Visibility="Hidden"
                                                                         IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                                <Popup x:Name="Popup"
                                                                       Placement="Bottom"
                                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True"
                                                                       Focusable="False"
                                                                       PopupAnimation="Slide">
                                                                    <Grid x:Name="DropDown"
                                                                          SnapsToDevicePixels="True"
                                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                        <Border x:Name="DropDownBorder"
                                                                                Background="#E6000000"
                                                                                BorderThickness="1"
                                                                                BorderBrush="#66FFFFFF"
                                                                                CornerRadius="4"/>
                                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Grid>
                                                                </Popup>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </StackPanel>
                                
                                <!-- Description Field -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Description" 
                                               Foreground="White" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12,8"
                                             Background="#33FFFFFF"
                                             Foreground="White"
                                             BorderBrush="#66FFFFFF"
                                             BorderThickness="1"
                                             FontSize="14"
                                             Height="60"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right"
                                            Margin="0,16,0,0">
                                    <Button Content="Cancel" 
                                            Command="{Binding CancelEditCommand}"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Width="80" 
                                            Height="36"
                                            Margin="0,0,10,0"
                                            Background="#66666666"
                                            BorderBrush="#88888888"/>
                                    <Button Content="🗑️ Delete" 
                                            Command="{Binding DeleteEditCommand}"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Width="90" 
                                            Height="36"
                                            Margin="0,0,10,0"
                                            Background="#33D32F2F"
                                            BorderBrush="#D32F2F"/>
                                    <Button Content="Save" 
                                            Command="{Binding SaveEditCommand}"
                                            Style="{StaticResource ModernButtonStyle}"
                                            Width="80" 
                                            Height="36"
                                            Background="#059862"
                                            BorderBrush="#0A7A4F"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Placeholder when no item selected -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsEditingItem, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="📝" 
                                       FontSize="48" 
                                       HorizontalAlignment="Center"
                                       Foreground="#66FFFFFF"/>
                            <TextBlock Text="Select an item to edit" 
                                       Foreground="#99FFFFFF" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,5"/>
                            <TextBlock Text="Click on any link or folder in the tree to view and edit its details" 
                                       Foreground="#66FFFFFF" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Notification Panel -->
            <Border Grid.Row="1" 
                    Background="#E6059862" 
                    CornerRadius="8,8,0,0"
                    Margin="10,0,10,10"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ShowSuccessMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Padding="15,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" 
                               FontSize="14"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Row="1" 
                    Background="#E6D32F2F" 
                    CornerRadius="8,8,0,0"
                    Margin="10,0,10,10"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ShowErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Padding="15,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✗" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" 
                               FontSize="14"/>
                </StackPanel>
            </Border>
            
            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="2"
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="12">
                
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Width="60"
                                 Height="6"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernProgressBarStyle}"/>
                    <TextBlock Text="Loading..."
                               Foreground="White"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
